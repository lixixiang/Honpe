<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/re_floor_build"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_10dp"
    android:layout_marginBottom="@dimen/_1dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/txt_floor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="3楼"
        android:textColor="@color/green"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/txt_floor"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宿舍:"
                android:textColor="@color/blue_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_totalRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8间"
                android:textColor="@color/list_bottom"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_emptyRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:background="@drawable/shape_rectangle_grey_5_lr15_tb5"
                    android:text="空房:3间"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_freeRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:background="@drawable/shape_rectangle_white_blue_5_lr15_tb5"
                    android:text="未满:3间"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_fullRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rectangle_white_green_5_lr15_tb5"
                    android:text="满房:3间"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_orientation"
        android:layout_width="@dimen/_25dp"
        android:layout_height="@dimen/_25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_5dp"
        android:src="@mipmap/ic_right_grey"/>

</RelativeLayout>