<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_1dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/_0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_1dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="日期"
            android:textColor="@color/black" />
        <jp.shts.android.library.TriangleLabelView
            android:id="@+id/lab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            app:backgroundColor="@color/grey_home"
            app:corner="rightTop"
            app:primaryText="菜单"
            app:primaryTextColor="@color/white"
            app:primaryTextSize="7sp"
            app:labelBottomPadding="3dp"
            app:labelCenterPadding="0dp"
            app:labelTopPadding="3dp"/>
    </RelativeLayout>



    <TextView
        android:id="@+id/tv_item_week"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_1dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:text="星期"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/item1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_1dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ck_child_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_1dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ck_child_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_1dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/ck_child_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_1dp"
        android:background="@color/white"
        android:clickable="false"
        android:gravity="center"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/ck_child_night_snack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:layout_marginStart="@dimen/_1dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/ck_child_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckBox"
           />

    </LinearLayout>

</LinearLayout>