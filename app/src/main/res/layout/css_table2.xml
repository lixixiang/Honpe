<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_1dp"
    android:background="@drawable/selector_white_grey"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/_10dp"
    android:paddingStart="@dimen/_25dp"
    android:paddingEnd="@dimen/_10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="@dimen/_12dp"
            android:layout_height="@dimen/_12dp"
            android:src="@mipmap/ic_right_grey"
            android:layout_marginEnd="@dimen/_10dp"/>

        <ImageView
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_depart" />

        <TextView
            android:id="@+id/tv_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8dp"
            android:textColor="@color/black_111111"
            android:textSize="@dimen/_14sp"
            tools:text="测试" />

    </LinearLayout>


</RelativeLayout>

