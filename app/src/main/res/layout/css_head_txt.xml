<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10dp"
    android:background="@drawable/selector_white_grey"
    android:layout_marginBottom="@dimen/_1dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_arrow_head"
            android:layout_width="@dimen/_16dp"
            android:layout_height="@dimen/_16dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:src="@mipmap/ic_right_grey" />

        <ImageView
            android:layout_width="@dimen/_26dp"
            android:layout_height="@dimen/_26dp"
            android:src="@mipmap/square" />

        <TextView
            android:id="@+id/job_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>


</RelativeLayout>