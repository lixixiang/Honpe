<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/ll_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">

                <TextView
                    android:id="@+id/tv_title_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:text="请假类型"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_toStartOf="@+id/iv_delete_type"
                        android:background="@null"
                        android:drawablePadding="@dimen/_20dp"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/shape_black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_delete_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="end|center_vertical"
                        android:src="@mipmap/ic_right_grey" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:text="开始时间"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_startTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_toStartOf="@+id/iv_delete_start"
                        android:background="@null"
                        android:drawablePadding="@dimen/_20dp"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/shape_black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_delete_start"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="end|center_vertical"
                        android:src="@mipmap/ic_right_grey" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:text="结束时间"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_endTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_toStartOf="@+id/iv_delete_end"
                        android:background="@null"
                        android:drawablePadding="@dimen/_20dp"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/shape_black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_delete_end"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="end|center_vertical"
                        android:src="@mipmap/ic_right_grey" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:text="时长(小时)"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/tv_auto_hour"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@+id/iv_delete_auto_hour"
                        android:background="@null"
                        android:drawablePadding="@dimen/_20dp"
                        android:gravity="center_vertical"
                        android:hint="请输入小时数"
                        android:inputType="number"
                        android:paddingStart="@dimen/_20dp"
                        android:paddingEnd="@dimen/_20dp"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/shape_black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_delete_auto_hour"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="end|center_vertical"
                        android:src="@mipmap/ic_right_grey"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">

                <TextView
                    android:id="@+id/tv_title_case"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:text="请假事由"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


                <EditText
                    android:id="@+id/et_case"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:hint="请输入"
                    android:inputType="textMultiLine"
                    android:layout_marginStart="@dimen/_30dp"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:scrollHorizontally="false"
                    android:singleLine="true"
                    android:textColorHint="@color/feedback_et_hint"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_48dp"
                android:layout_marginTop="@dimen/_2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingStart="@dimen/_10dp"
                android:paddingEnd="@dimen/_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    android:text="@string/apply_mudidi"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_30dp"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:layout_toStartOf="@+id/iv_delete_mudidi"
                        android:background="@null"
                        android:drawablePadding="@dimen/_20dp"
                        android:gravity="center_vertical"
                        android:hint="请选择"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/shape_black"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_delete_mudidi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:gravity="end|center_vertical"
                        android:src="@mipmap/ic_right_grey" />
                </RelativeLayout>


            </LinearLayout>

            <include layout="@layout/btn_change_state" />

        </LinearLayout>


    </ScrollView>


</LinearLayout>